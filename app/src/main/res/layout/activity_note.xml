<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mj.android.justcapture.NoteActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NoteName"
        android:id="@+id/tvNoteName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etName"
        android:layout_below="@+id/tvNoteName"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="34dp"
        android:layout_alignRight="@+id/tvNoteName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etId"
        android:inputType="number"
        android:layout_alignTop="@+id/etName"
        android:layout_toRightOf="@+id/etName"
        android:layout_toLeftOf="@+id/buttonTakePicture" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etCategory"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/etId"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/etId" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etDescription"
        android:layout_alignTop="@+id/etCategory"
        android:layout_toRightOf="@+id/etCategory"
        android:layout_toLeftOf="@+id/tvPhotoNames" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Note"
        android:id="@+id/buttonSaveNote"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TakePicture"
        android:id="@+id/buttonTakePicture"
        android:onClick=""
        android:layout_below="@+id/etId"
        android:layout_alignParentRight="true" />

    <Gallery
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gallery"
        android:layout_below="@+id/etDescription"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PhotoNames"
        android:id="@+id/tvPhotoNames"
        android:layout_above="@+id/gallery"
        android:layout_alignRight="@+id/buttonTakePicture" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/picture"
        android:layout_below="@+id/gallery"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="7dp" />




</RelativeLayout>
